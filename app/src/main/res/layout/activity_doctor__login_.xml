<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/d_dawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mitul.hospitalfinder.Activity.Admin.AdminMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232a7c"
            android:elevation="0dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:translationZ="0.1dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/d_toolb"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:elevation="0dp"
                android:gravity="left"
                app:layout_scrollFlags="scroll|enterAlways">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:text="Doctor"
                    android:textColor="#fff"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="bold" />


            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/backgroundimage"
            android:layout_marginTop="@dimen/_40sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6B000000"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/docter_iv"
                        android:layout_width="@dimen/_85sdp"
                        android:layout_height="@dimen/_85sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"

                        android:src="@mipmap/profiled" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdp">


                                <TextView
                                    android:id="@+id/txt_d_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:background="@drawable/border"
                                    android:hint="Doctor  name"
                                    android:padding="@dimen/_10sdp"
                                    android:singleLine="true"
                                    android:textColor="#ffff"
                                    android:textColorHint="#ffff"
                                    android:textSize="@dimen/_15sdp"></TextView>


                                <TextView
                                    android:id="@+id/txt_d_mo"
                                    android:layout_width="match_parent"

                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/border"
                                    android:hint="Doctor mobile number"
                                    android:inputType="number"
                                    android:padding="@dimen/_10sdp"

                                    android:singleLine="true"
                                    android:textColor="#ffff"
                                    android:textColorHint="#ffff"
                                    android:textSize="@dimen/_15sdp" />

                                <TextView
                                    android:id="@+id/txt_d_category"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/border"
                                    android:hint="Doctor Category"
                                    android:inputType="number"
                                    android:padding="@dimen/_10sdp"

                                    android:singleLine="true"
                                    android:textColor="#ffff"
                                    android:textColorHint="#ffff"
                                    android:textSize="@dimen/_15sdp" />

                                <TextView
                                    android:id="@+id/txt_d_qualification"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/border"
                                    android:hint="Doctor Degree"
                                    android:inputType="number"
                                    android:padding="@dimen/_10sdp"

                                    android:singleLine="true"
                                    android:textColor="#ffff"
                                    android:textColorHint="#ffff"
                                    android:textSize="@dimen/_15sdp" />

                                <TextView
                                    android:id="@+id/txt_d_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_marginTop="@dimen/_10sdp"
                                    android:background="@drawable/border"
                                    android:hint="Doctor Email id"
                                    android:inputType="number"
                                    android:padding="@dimen/_10sdp"

                                    android:singleLine="true"
                                    android:textColor="#ffff"
                                    android:textColorHint="#ffff"
                                    android:textSize="@dimen/_15sdp" />
                            </LinearLayout>


                        </ScrollView>


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/d_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu_doctor">


    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
