<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/ad_pending_ll"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="@dimen/_10sdp"
android:layout_marginTop="@dimen/_10sdp"
android:background="@drawable/border4">

<LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="patient name:"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/hs_od_bd_rej_pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="patient Mobilenumber:"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/hs_od_bd_rej_pmo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="patient DateofBirth:"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/hs_od_bd_rej_pdob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordered Blood Group:"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/hs_od_bd_rej_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordered Blood Group Quantity:"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/hs_od_bd_rej_bq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ordered Blood Date:"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/hs_od_bd_rej_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Reason:"
        android:textSize="@dimen/_15sdp" />
    <TextView
        android:id="@+id/hs_od_bd_rej_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/_15sdp" />

</LinearLayout>


</LinearLayout>