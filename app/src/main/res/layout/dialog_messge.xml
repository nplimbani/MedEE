<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_7sdp"
    android:background="#807e7db6"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/db_icon1"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/check_icon"/>

        <TextView
            android:id="@+id/txt_error_msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/db_icon1"
            android:text="Please Enter Email Id First"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_done1"
            android:layout_below="@+id/txt_error_msg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:background="@drawable/dialog_btn_round"
            android:padding="@dimen/_10sdp"
            android:layout_centerHorizontal="true"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />




    </RelativeLayout>
</LinearLayout>