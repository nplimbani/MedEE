<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroundimage"
    android:orientation="vertical"
    tools:context="com.example.mitul.hospitalfinder.Activity.ForgetPassword1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6B000000"
        android:orientation="vertical">

       <!--- <EditText
            android:id="@+id/et_hs_new_blood_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_120sdp"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="Enter Blood Group"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="#ffff"
            android:textColorHint="#ffff" /> -->
        <Spinner
            android:id="@+id/sp_hs_new_blood_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_120sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/border"

            />


        <EditText
            android:id="@+id/et_hs_new_blood_stock"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="Enter Stock"
            android:inputType="number"
            android:padding="@dimen/_5sdp"
            android:singleLine="true"
            android:textColor="#ffff"
            android:textColorHint="#ffff" />


        <Button
            android:id="@+id/btn_hs_lg_new_blood_Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:text="Add" />


    </LinearLayout>
</LinearLayout>
