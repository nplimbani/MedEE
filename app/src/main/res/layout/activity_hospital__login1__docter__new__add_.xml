<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroundimage"
    android:orientation="vertical"
    tools:context="com.example.mitul.hospitalfinder.Activity.Hospital.Hospital_SignupDocterDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6B000000"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:id="@+id/pt_lg2_tool1"
            android:background="#232a7c">

            <ImageView
                android:id="@+id/hs_lg1_d1_new_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_hs_lg1_new_docteriv"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_85sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"

                android:src="@mipmap/profiled" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="2"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">
                        <EditText
                            android:id="@+id/et_hs_lg1_d1_new_email"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/border"
                            android:hint="Doctor email_id"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:inputType="textEmailAddress"
                            android:textColor="#ffff"
                            android:textColorHint="#ffff" />

                        <EditText
                            android:id="@+id/et_hs_lg1_d1_new_password"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/border"
                            android:hint="Enter Password"
                            android:inputType="textWebPassword"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="#ffff"
                            android:layout_marginTop="@dimen/_10sdp"

                            android:textColorHint="#ffff" />

                        <EditText
                            android:id="@+id/et_hs_lg1_d1_new_cpassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/border"
                            android:hint="Enter Confirm Password"
                            android:padding="@dimen/_10sdp"
                            android:inputType="textWebPassword"
                            android:singleLine="true"
                            android:textColor="#ffff"
                            android:layout_marginTop="@dimen/_10sdp"

                            android:textColorHint="#ffff" />


                        <EditText
                            android:id="@+id/et_hs_lg1_d1_new_fname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/border"
                            android:hint="Doctor first name"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="#ffff"
                            android:textColorHint="#ffff" />


                        <EditText
                            android:id="@+id/et_hs_lg1_d1_new_mname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/border"
                            android:hint="Doctor middle name"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="#ffff"
                            android:textColorHint="#ffff" />

                        <EditText
                            android:id="@+id/et_hs_lg1_d1_new_lname"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/border"
                            android:hint="Doctor last name"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="#ffff"
                            android:textColorHint="#ffff" />

                        <Spinner
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/sp_hs_lg1_d1_new_category"
                            android:layout_width="match_parent"
                            android:background="@drawable/border"

                            android:layout_height="45sp"></Spinner>


                       <!-- <EditText
                            android:id="@+id/et_hs_lg1_d1_new_qualification"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/border"
                            android:hint="Doctor qualification"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="#ffff"
                            android:textColorHint="#ffff" />-->


                        <Spinner
                            android:id="@+id/sp_hs_lg1_d1_new_qualification"
                            android:layout_width="match_parent"
                            android:layout_height="45sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/border"
                            android:gravity="center_horizontal"></Spinner>
                        <EditText
                            android:id="@+id/et_hs_lg1_d1_new_mo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/border"
                            android:hint="Doctor mobile number"
                            android:inputType="number"
                            android:padding="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="#ffff"
                            android:textColorHint="#ffff" />




                    </LinearLayout>


                </ScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_hs_lg1_d1_new_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ADD"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>