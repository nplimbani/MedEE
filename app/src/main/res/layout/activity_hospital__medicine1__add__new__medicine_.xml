<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroundimage"
    android:orientation="vertical"
    tools:context="com.example.mitul.hospitalfinder.Activity.ForgetPassword1Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6B000000"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_hs_new_med_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Enter Medicine name"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />


            <EditText
                android:id="@+id/et_hs_new_med_stock"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Enter Stock"

                android:inputType="number"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="#ffff"
                android:textColorHint="#ffff" />

            <EditText
                android:id="@+id/et_hs_lg1_new_md_des"
                android:background="@drawable/border1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:layout_margin="@dimen/_25sdp"
                android:gravity="top"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp"
                android:hint="Enter Medicine description"
                android:textColorHint="#fff"
                android:scrollbars="vertical"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btn_hs_lg_med_Add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:text="Add" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
