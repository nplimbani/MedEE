<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/backgroundimage"
    tools:context="com.example.mitul.hospitalfinder.Activity.Hospital.Hospital_Order_Blood_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:background="#6B000000">

        <android.support.v7.widget.Toolbar
            android:id="@+id/pt_lg2_tool1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="#232a7c">

            <ImageView
                android:id="@+id/pt_lg2_order_blood_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/patient_order_blood_tablayout"
            android:layout_width="match_parent"

            android:layout_height="@dimen/_55sdp"
            android:layout_below="@+id/ac"
            android:background="#304aa1"
            app:tabIndicatorColor="@color/dark_white"
            app:tabSelectedTextColor="#ffffff"

            app:tabTextColor="#fff">


        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/patient_order_blood_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/admin_main_tablayout"></android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>
