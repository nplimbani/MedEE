<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroundimage"
    android:orientation="vertical"
    tools:context="com.example.mitul.hospitalfinder.Activity.ForgetPassword1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6B000000"
        android:orientation="vertical">

    <EditText
        android:id="@+id/et_fp_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_120sdp"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Enter Password"
        android:inputType="textWebPassword"
        android:padding="@dimen/_5sdp"
        android:singleLine="true"
        android:textColor="#ffff"
        android:textColorHint="#ffff" />


    <EditText
        android:id="@+id/et_fp_cwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="Enter ConfirmPassword"
        android:inputType="textWebPassword"
        android:padding="@dimen/_5sdp"
        android:singleLine="true"
        android:textColor="#ffff"
        android:textColorHint="#ffff" />


    <Button
        android:id="@+id/fp_btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:text="Update" />

    <Button
        android:id="@+id/btn_fp_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_117sdp"
        android:text="Back to login" />
</LinearLayout></LinearLayout>
